<div class="container bg-gray-50 flex flex-row justify-center items-center">
  <div class="signup-section pt-2">
    <div class="bg-white border border-gray-300 w-80 py-6 flex items-center flex-col mb-3 ">
        <%= image_tag 'logo.png', class: "card-img-top mb-5" %>
        <div class="mb-3">
          <p class="text-sm text-center font-bold  text-gray-500 " >Sign up to see photos and <br> videos from your friends</p>
        </div>
        <button class="text-sm flex text-center bg-blue-300 text-white py-1 px-6 rounded font-medium">
          <%= image_tag("facebook.png", class: "facebook") %>
          <span class="text-xs text-white-900 font-semibold">Log in with Facebook</span>
      </button>
      <div class="flex align-center justify-evenly space-x-2 w-64 mt-4">
        <span class="bg-gray-300 h-px flex-grow t-2 relative top-2"></span>
        <span class="flex-none uppercase text-xs text-gray-400 font-semibold">or</span>
        <span class="bg-gray-300 h-px flex-grow t-2 relative top-2"></span>
      </div>
      <div class = "mt-4 w-64 flex flex-col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <form class="mt-4 w-64 flex flex-col">
          
              <div class="mb-1 mt-4"> 
                <%= f.email_field :email, class:"text-xs w-full mb-2 rounded border bg-gray-100 border-gray-300 px-4 py-2 focus:outline-none focus:border-gray-400 active:outline-none", placeholder:"Mobile Number or email"%>
              </div>
              <div class="mb-1 mt-4">
                <%= f.text_field :full_name, class:"text-xs w-full mb-2 rounded border bg-gray-100 border-gray-300 px-4 py-2 focus:outline-none focus:border-gray-400 active:outline-none", placeholder:"Full Name"%>
              </div>
              <div class="mb-1 mt-4">
                <%= f.text_field :username, class:"text-xs w-full mb-2 rounded border bg-gray-100 border-gray-300 px-4 py-2 focus:outline-none focus:border-gray-400 active:outline-none", placeholder:"Username"%>
              </div>
              <div class="mb-1">
                <%= f.password_field :password, class:"text-xs w-full mb-4 rounded border bg-gray-100 border-gray-300 px-4 py-2 focus:outline-none focus:border-gray-400 active:outline-none",  placeholder:"Password"%>
              </div>
              <div class="mb-1">
                <%= f.password_field :password_confirmation, class:"text-xs w-full mb-4 rounded border bg-gray-100 border-gray-300 px-4 py-2 focus:outline-none focus:border-gray-400 active:outline-none", placeholder:"Password Confirmation"%>
              </div>
              <p class="text-sm text-gray-400">By signing up, you agree to our Terms, Privacy Policy and Cookies Policy</p>
            <%= f.submit "Sign Up", class: "text-sm text-center bg-blue-300 text-white py-1 px-6 w-full rounded font-medium"%>
        </form>
        <%end%>
        </div>
          <button class="mt-4 flex">
              <%= image_tag("facebook.png", class: "facebook") %>
              <span class="text-xs text-blue-900 font-semibold">Log in with Facebook</span>
          </button>            
      </div>
      <div class="bg-white border border-gray-300 text-center w-80 py-4">
        <span class="text-sm">Have an account?</span>
        <%= link_to  "Sign in", new_user_session_path, class:"text-blue-500 text-sm font-semibold" %>
      </div>
  </div>
</div>
